/* pages/my/order/order.wxss */

.contain {
  width: 100%;
}

/* tab部分 */

.tab {
  width: 100%;
  height: 88rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  white-space: nowrap;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
}

.tab-item {
  display: inline-block;
  text-align: center;
  font-size: 26rpx;
  color: #8f9193;
}

.active {
  color: #5758ea;
  border-bottom: 4rpx solid #5758ea;
}

/* 内容 */

.content {
  padding-top: 108rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 26rpx;
}

.content-item {
  overflow-y: scroll;
}