/**app.wxss**/

page {
  margin: 0;
  padding: 0;
  background-color: #f5f5f5;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

switch {
  zoom: 0.6;
}

.block {
  display: block;
}

.inline_block {
  display: inline-block;
}

.none {
  display: none;
}

.left {
  float: left;
}

.right {
  float: right;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

button::after {
  border: none;
}

.row {
  display: flex;
  flex-direction: row;
}

.column {
  display: flex;
  flex-direction: column;
}

.text_overflow {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.text_center {
  text-align: center;
}

.autoView {
  width: 92%;
  margin: auto;
  /* border: 1px red solid; */
}

.bg_fff {
  background-color: #fff;
}

.bg_green {
  background-color: #03d568;
}

.default {
  color: #5757e9;
}

.cg_color {
  color: #2080de;
}

.color_000 {
  color: #000;
}

.color_fff {
  color: #fff;
}

.color_f00 {
  color: #f00;
}

.bg_color {
  background-color: #2080de;
}

.bg_grey {
  background-color: #f5f5f5;
}

.fn_22 {
  font-size: 22rpx;
}

.fn_24 {
  font-size: 24rpx;
}

.fn_26 {
  font-size: 26rpx;
}

.fn_28 {
  font-size: 28rpx;
}

.fn_bolder {
  font-weight: bolder;
}

/* 用户头像 */

.userinfo {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.user-btn {
  border-radius: 50%;
  margin-top: 30rpx;
  line-height: 100rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx auto;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

/* tabbar组件样式全局化 */

.tabbar_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d7d7d7;
}

.tabbar_nav {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  height: 100%;
}

.tabbar_icon {
  width: 34rpx;
  height: 37rpx;
  margin-bottom: 10rpx;
}

.tabbar_nav:nth-child(3) image {
  width: 89rpx;
  height: 89rpx;
  margin-bottom: 0;
}

